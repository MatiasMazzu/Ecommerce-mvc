@{
    ViewData["Title"] = "Donde encontrarnos";
}


@model IEnumerable<Carrito_C.Models.Sucursal>;

<div class="container">
    <h2 class="text-center text-uppercase">¿Dónde estamos?</h2>
    @if (Model != null && Model.Count() > 0)
    {
        <div class="row mt-4">
            @foreach (var sucursal in Model)
            {

                <div class="col-md-4 col-lg-3">
                    <div class="card m-1">
                        <div class="card-body">
                            <img class="card-img-top img-fluid" src="~/img/locales/@sucursal.ImagenArchivo" alt="Producto imagen">
                            <h5 class="card-title text-center text-uppercase">@sucursal.Nombre</h5>
                            <p class="card-text">Direci&oacute;n: @sucursal.Direccion</p>
                            <p class="card-text">Teléfono: (011) @sucursal.Telefono</p>
                            Email: <a class="card-link" href="mailto:@sucursal.Email">@sucursal.Email</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-3" role="alert">
            No hay sucursales disponibles
        </div>
    }
</div>

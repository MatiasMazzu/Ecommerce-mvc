@model IEnumerable<Carrito_C.Models.ComprasItem>;

<div class="jumbotron">
    <h1 class="display-4">Pedido realizado</h1>
    <p class="lead">Su pedido ha sido realizado correctamente. En breve recibirá un correo electrónico con los pasos a seguir.</p>
    <hr class="my-4">
    <h4 class="mb-4">Datos de su compra</h4>
    <ul class="list-unstyled">
        <li>Fecha: @ViewBag.compra.FechaCompra</li>
        <li>Codigo de compra: @ViewBag.compra.Id</li>
        <li>
            <h5 class="font-weight-bold text-center">Productos</h5>
            <table class="table table-striped">
                <tr>
                    <th scope="col">Descripción</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Cantidad</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Producto.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Subtotal)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                    </tr>
                }
            </table>
        </li>
        <li>
            <div class="alert alert-primary text-center" role="alert">
                Total: @(((decimal)ViewBag.compra.Total).ToString("C2"))
            </div>
        </li>
        <li>Sucursal: @ViewBag.compra.Sucursal.Nombre</li>
        <li>Direccion: @ViewBag.compra.Sucursal.Direccion </li>
        <li>Telefono: (011) @ViewBag.compra.Sucursal.Telefono</li>
        <li>Email: <a href="mailto:@ViewBag.compra.Sucursal.Email">@ViewBag.compra.Sucursal.Email</a></li>
    </ul>
    <hr class="my-4">
    <p class="lead">
        <a class="btn btn-primary" asp-action="Index" asp-controller="Home">
            Volver al Inicio
        </a>
    </p>
</div>